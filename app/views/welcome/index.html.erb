    // -------------------- This is the quote coming from the right moving to the left and the brownstone moving from left to right to meet in the middle ---------------//


      function MovePicQuote() {
             var A = document.getElementById("indexQuote");
             var B = document.getElementById("indexPic");
             var pos = -680;
             var id = setInterval(frame, 8);
             function frame () {
                 if (pos >= 180){
                     clearInterval(id);

                 } else {
                     pos+=2;//rate of pixel change
                     A.style.right = pos + 'px';
                     B.style.left = pos + 'px';

                 }
             }

